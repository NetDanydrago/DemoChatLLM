@page "/"
@using Chat.ViewModels.Models

<div class="container-fluid vh-100 d-flex flex-column p-0">
    <!-- Header -->
    <div class="bg-primary text-white p-3 shadow-sm">
        <div class="container">
            <div class="d-flex justify-content-between align-items-center">
                @if (ViewModel.Messages.Count > 0)
                {
                    <button class="btn btn-outline-light btn-sm" @onclick="ClearChat">
                        <i class="bi bi-trash me-1"></i>Limpiar
                    </button>
                }
            </div>
        </div>
    </div>

    <!-- Messages Area -->
    <div class="flex-fill overflow-auto bg-light p-3">
        <div class="container">
            @if (ViewModel.Messages.Count == 0 && !ViewModel.IsLoading)
            {
                <div class="text-center text-muted py-5">
                    <i class="bi bi-chat-text display-1"></i>
                    <p class="mt-3">No hay mensajes aún. ¡Envía tu primer mensaje!</p>
                </div>
            }
            else
            {
                @foreach (var message in ViewModel.Messages)
                {
                    <div class="mb-3 @(message.IsUser ? "text-end" : "text-start")">
                        <div class="d-inline-block" style="max-width: 70%;">
                            <div class="@(message.IsUser ? "bg-primary text-white" : "bg-white") p-3 rounded shadow-sm">
                                <div class="mb-1">
                                    <small class="@(message.IsUser ? "text-white-50" : "text-muted")">
                                        <i class="bi bi-@(message.IsUser ? "person-fill" : "robot") me-1"></i>
                                        @(message.IsUser ? "Tú" : "Asistente")
                                    </small>
                                </div>
                                <div style="white-space: pre-wrap;">@message.Content</div>
                                <div class="mt-2">
                                    <small class="@(message.IsUser ? "text-white-50" : "text-muted")">
                                        @message.Timestamp.ToString("HH:mm")
                                    </small>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }

            @if (ViewModel.IsLoading)
            {
                <div class="mb-3 text-start">
                    <div class="d-inline-block">
                        <div class="bg-white p-3 rounded shadow-sm">
                            <div class="spinner-border spinner-border-sm text-primary me-2" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <span class="text-muted">El asistente está escribiendo...</span>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>

    <!-- Error Message -->
    @if (ViewModel.HasError)
    {
        <div class="container">
            <div class="alert alert-danger alert-dismissible fade show m-3" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                @ViewModel.ErrorMessage
            </div>
        </div>
    }

    <!-- Input Area -->
    <div class="bg-white border-top p-3 shadow-sm">
        <div class="container">
            <div class="row g-2">
                <div class="col">
                    <input type="text" 
                           class="form-control" 
                           placeholder="Escribe tu mensaje aquí..." 
                           @bind="MessageInput"
                           @bind:event="oninput"
                           @onkeydown="HandleKeyDown"
                           disabled="@ViewModel.IsLoading" />
                </div>
                <div class="col-auto">
                    <button class="btn btn-primary" 
                            @onclick="SendMessage" 
                            disabled="@(string.IsNullOrWhiteSpace(MessageInput) || ViewModel.IsLoading)">
                        @if (ViewModel.IsLoading)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status"></span>
                        }
                        else
                        {
                            <i class="bi bi-send-fill me-1"></i>
                        }
                        Enviar
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
